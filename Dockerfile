FROM ubuntu:14.04

MAINTAINER Scott Wilcox "scott@dor.ky"

RUN apt-get update

RUN apt-get install -y openssh-server ansible python-apt

EXPOSE 22

RUN mkdir -p /var/run/sshd
RUN chmod 0755 /var/run/sshd

# Create and configure vagrant user
RUN useradd --create-home -s /bin/bash vagrant
WORKDIR /home/vagrant

# Configure SSH access
RUN mkdir -p /home/vagrant/.ssh
RUN echo "ssh-rsa  vagrant insecure public key" > /home/vagrant/.ssh/authorized_keys
RUN chown -R vagrant: /home/vagrant/.ssh
RUN echo -n 'vagrant:vagrant' | chpasswd

# Enable passwordless sudo for the "vagrant" user
RUN echo 'vagrant ALL=NOPASSWD: ALL' > /etc/sudoers.d/vagrant

CMD /usr/sbin/sshd -D

# Now add in the ansible playbooks
RUN mkdir -p /opt/ansible
ADD ansible /opt/ansible

# Switch to ansible workdir
WORKDIR /opt/ansible

# Run ansible config locally
RUN ansible-playbook -i "localhost," -c local ansible/playbook.yml

#Â Restart services
RUN service mysql restart
RUN service nginx restart
RUN service php5-fpm restart
RUN service beanstalkd restart

